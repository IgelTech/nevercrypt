<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PropertyRow"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_edit"
        style="@style/PropertyTitle"
        android:text="@string/create_new_container_or_add_existing_container" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_new_container_button"
            style="@style/Button"
            android:layout_weight="0.5"
            android:text="@string/create_new_container" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_existing_container_button"
            style="@style/Button"
            android:layout_weight="0.5"
            android:text="@string/add_container" />
    </LinearLayout>
</LinearLayout>
