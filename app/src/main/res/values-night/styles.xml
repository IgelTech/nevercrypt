<resources>
    <style name="Theme.NeverCrypt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_night</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <!-- Custom styles -->
        <item name="android:actionModeBackground">@color/primary_variant</item>
    </style>
    <style name="LeftDrawer">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:background">@android:color/black</item>
    </style>
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="DrawerRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_list_row_height</item>
        <item name="android:padding">5dp</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    </style>
    <style name="DrawerMainIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="DrawerMainTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="DrawerCloseLocationIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="DrawerRow.Sub" />
    <style name="DrawerMainIcon.Sub" />
    <style name="DrawerMainTitle.Sub">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle" />
    </style>
    <style name="EmptyListText">
        <item name="android:id">@id/android:empty</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="LocationListRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    </style>
    <style name="LocationListText">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="LocationListIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>
