<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme.EDS" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:buttonBarButtonStyle">@style/Button</item>
        <item name="android:checkboxStyle">@style/CheckboxStyle</item>
        <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="android:actionModeStyle">@style/ActionMode</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_menu_back</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="mainTextColor">@color/gray_medium</item>
        <item name="secTextColor">@color/gray_light</item>
        <item name="drawerRowBackground">@android:color/white</item>
        <item name="drawerBackground">@android:color/white</item>
        <item name="drawerMenuTitleTextColor">@color/darker_gray</item>
        <item name="drawerMenuItemTextColor">@color/blue</item>
        <item name="dialogStyle">@style/Dialog</item>
        <item name="propertyButtonStyle">@style/Button.Property</item>
        <item name="settingsBackground">@android:color/white</item>
        <item name="propertyDivider">@drawable/properties_divider</item>
        <item name="propertyCatTextColor">@color/darker_gray</item>
        <item name="propertyCheckboxStyle">@style/CheckboxStyle.Property</item>
        <item name="leftDrawerStyle">@style/LeftDrawer</item>
        <item name="fmCheckBoxStyle">@style/RowButton.Check</item>
        <item name="fmRadioStyle">@style/RowButton.Radio</item>
        <item name="fmListStyle">@style/FileList</item>
        <item name="iconsColor">@color/blue2</item>
        <item name="selectedItemBackground">@color/gray_dark</item>
    </style>
    <style name="Theme.EDS.Dark" parent="android:ThemeOverlay.Material.Dark.ActionBar">
        <item name="android:actionBarStyle">@style/ActionBar.Dark</item>
        <item name="android:buttonStyle">@style/Button.Dark</item>
        <item name="android:buttonBarButtonStyle">@style/Button.Dark</item>
        <item name="android:checkboxStyle">@style/CheckboxStyle.Dark</item>
        <item name="android:radioButtonStyle">@style/RadioButtonStyle.Dark</item>
        <item name="android:actionModeStyle">@style/ActionMode.Dark</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_menu_back</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle.Dark</item>
        <item name="mainTextColor">@android:color/white</item>
        <item name="secTextColor">@color/gray_light</item>
        <item name="drawerRowBackground">@color/gray_dark2</item>
        <item name="drawerBackground">@color/gray_dark2</item>
        <item name="drawerMenuTitleTextColor">@android:color/white</item>
        <item name="drawerMenuItemTextColor">@color/gray_light</item>
        <item name="dialogStyle">@style/Dialog.Dark</item>
        <item name="propertyButtonStyle">@style/Button.Property.Dark</item>
        <item name="settingsBackground">@android:color/black</item>
        <item name="propertyDivider">@drawable/properties_divider_dark</item>
        <item name="propertyCatTextColor">@color/darker_gray</item>
        <item name="propertyCheckboxStyle">@style/CheckboxStyle.Dark.Property</item>
        <item name="leftDrawerStyle">@style/LeftDrawer.Dark</item>
        <item name="fmCheckBoxStyle">@style/RowButton.Check.Dark</item>
        <item name="fmRadioStyle">@style/RowButton.Radio.Dark</item>
        <item name="fmListStyle">@style/FileList.Dark</item>
        <item name="iconsColor">@color/gray_light</item>
        <item name="selectedItemBackground">@color/gray_dark</item>
    </style>
    <style name="Dialog" parent="Theme.EDS">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/RtlOverlay.DialogWindowTitle.AppCompat</item>
        <item name="android:windowTitleBackgroundStyle">@style/Base.DialogWindowTitleBackground.AppCompat</item>
        <item name="android:windowBackground">@drawable/abc_dialog_material_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="listPreferredItemPaddingLeft">24dip</item>
        <item name="listPreferredItemPaddingRight">24dip</item>
        <item name="android:listDivider">@null</item>
        <item name="android:windowCloseOnTouchOutside">@bool/abc_config_closeDialogWhenTouchOutside</item>
    </style>
    <style name="Dialog.Dark" parent="Theme.EDS.Dark">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/RtlOverlay.DialogWindowTitle.AppCompat</item>
        <item name="android:windowTitleBackgroundStyle">@style/Base.DialogWindowTitleBackground.AppCompat</item>
        <item name="android:windowBackground">@color/gray_dark2</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material</item>
        <item name="android:textAppearanceInverse">@android:style/TextAppearance.Material.Inverse</item>
        <item name="android:listPreferredItemPaddingLeft">16dip</item>
        <item name="android:listPreferredItemPaddingRight">16dip</item>
        <item name="android:listPreferredItemPaddingStart">16dip</item>
        <item name="android:listPreferredItemPaddingEnd">16dip</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>
    <style name="ActionBar" parent="android:Widget.Material.ActionBar.Solid">
        <item name="android:background">@android:color/black</item>
        <item name="android:backgroundStacked">@android:color/black</item>
    </style>
    <style name="ActionBar.Dark" parent="android:Widget.Material.ActionBar.Solid">
    </style>
    <style name="ActionMode" parent="android:Widget.Material.Light.ActionMode">
        <item name="android:background">@android:color/black</item>
    </style>
    <style name="ActionMode.Dark" parent="android:Widget.Material.ActionMode" />
    <style name="ActionBarTitleTextStyle" parent="android:TextAppearance.Material.Widget.ActionBar.Title.Inverse" />
    <style name="ActionBarTitleTextStyle.Dark" parent="android:TextAppearance.Material.Widget.ActionBar.Title" />
    <style name="Button"  parent="android:Widget.Material.Light.Button" />
    <style name="Button.Dark"  parent="android:Widget.Material.Button" />
    <style name="CheckboxStyle" parent="android:Widget.Material.Light.CompoundButton.CheckBox"/>
    <style name="CheckboxStyle.Dark" parent="android:Widget.Material.CompoundButton.CheckBox"/>
    <style name="RadioButtonStyle" parent="android:Widget.Material.Light.CompoundButton.RadioButton" />
    <style name="RadioButtonStyle.Dark" parent="android:Widget.Material.CompoundButton.RadioButton" />
    <style name="LeftDrawer" parent="android:Widget.Material.Light.ListView">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:background">?attr/drawerBackground</item>
    </style>
    <style name="LeftDrawer.Dark" parent="android:Widget.Material.ListView">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:background">?attr/drawerBackground</item>
    </style>
    <style name="DrawerRow">
        <item name="android:background">?attr/drawerRowBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_list_row_height</item>
        <item name="android:padding">5dp</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    </style>
    <style name="DrawerMainIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">?attr/iconsColor</item>
    </style>
    <style name="DrawerMainTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/drawerMenuTitleTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="DrawerCloseLocationIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="DrawerRow.Sub" />
    <style name="DrawerMainIcon.Sub" />
    <style name="DrawerMainTitle.Sub">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/drawerMenuItemTextColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle" />
    </style>
    <style name="EmptyListText">
        <item name="android:id">@id/android:empty</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">none</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="LocationListRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
    </style>
    <style name="LocationListText">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="LocationListIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>
